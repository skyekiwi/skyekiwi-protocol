{
  "extends": "@skyekiwi/dev/config/tsconfig-base.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@skyekiwi/crypto": [ "packages/crypto/src" ],
      "@skyekiwi/crypto/*": [ "packages/crypto/src/*" ],
      "@skyekiwi/diff": [ "packages/util/src" ],
      "@skyekiwi/diff/*": [ "packages/util/src/*" ],
      "@skyekiwi/driver": [ "packages/driver/src" ],
      "@skyekiwi/driver/*": [ "packages/driver/src/*" ],
      "@skyekiwi/file": [ "packages/file/src" ],
      "@skyekiwi/file/*": [ "packages/file/src/*" ],
      "@skyekiwi/ipfs": [ "packages/ipfs/src" ],
      "@skyekiwi/ipfs/*": [ "packages/ipfs/src/*" ],
      "@skyekiwi/metadata": [ "packages/metadata/src" ],
      "@skyekiwi/metadata/*": [ "packages/metadata/src/*" ],
      "@skyekiwi/s-contract": [ "packages/s-contract/src" ],
      "@skyekiwi/s-contract/*": [ "packages/s-contract/src/*" ],
      "@skyekiwi/secret-registry": [ "packages/secret-registry/src" ],
      "@skyekiwi/secret-registry/*": [ "packages/secret-registry/src/*" ],
      "@skyekiwi/util": [ "packages/util/src" ],
      "@skyekiwi/util/*": [ "packages/util/src/*" ],
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types",
      "./node_modules/ethers/types",
    ]
  },
}
